#include <algorithm>
#include "Card.h"
#include <vector>

class Hand{
protected:
	std::vector<Card*> hand;
public:
	Hand(){};
	
	
	
	void Add(Card* newCard){
		hand.push_back(newCard);
}
	void Clear(){
		hand.clear();
}
	void Sort(){
		std::sort(hand.begin(),hand.begin()+hand.size(),CompareCardPointers);
	bool CompareCardPointers(Card* a, Card* b){
		return *a<*b;
}}
	void Print(){
		for(int i =0;i<hand.size();i++){
			hand[i]->GetCardInfo();
}
}


};
